<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'CineMax - Immersive Cinema Experience' %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-animation"></div>

    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="hero-tag"><%= heroTag || 'PREMIUM CINEMA' %></div>
            <h1 class="hero-title">Experience<br><span class="gradient-text">Cinema</span><br>Reimagined</h1>
            <p class="hero-description"><%= heroDescription || 'Immerse yourself in the future of entertainment' %></p>
            <div class="hero-buttons">
                <a href="#events" class="btn-hero">Explore Events</a>
                <a href="#booking-space" class="btn-hero-outline">Book Space</a>
            </div>
            <div class="scroll-indicator">
                <span>Scroll</span>
                <div class="scroll-line"></div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                <% 
                const stats = [
                    { number: '500+', label: 'Events Hosted' },
                    { number: '50K+', label: 'Happy Viewers' },
                    { number: '4K', label: 'Ultra HD Quality' },
                    { number: '24/7', label: 'Support Available' }
                ];
                stats.forEach(stat => { %>
                    <div class="stat-item">
                        <div class="stat-number"><%= stat.number %></div>
                        <div class="stat-label"><%= stat.label %></div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Events Section -->
    <section id="events" class="events-section">
        <div class="container">
            <div class="section-header">
                <div class="section-tag">UPCOMING</div>
                <h2 class="section-title">Featured <span class="gradient-text">Events</span></h2>
                <p class="section-description">Don't miss out on our exclusive screenings</p>
            </div>

            <div class="events-grid">
                <% if (events && events.length > 0) { %>
                    <% events.forEach(event => { %>
                        <div class="event-card">
                            <div class="event-image">
                                <div class="event-gradient"></div>
                                <div class="event-badge <%= event.badgeClass || 'premiere' %>"><%= event.badge %></div>
                                <div class="event-icon"><%= event.icon || 'ðŸŽ¬' %></div>
                            </div>
                            <div class="event-content">
                                <h3 class="event-title"><%= event.title %></h3>
                                <div class="event-meta">
                                    <span class="meta-item"><%= event.genre %></span>
                                    <span class="meta-item"><%= event.duration %></span>
                                </div>
                                <div class="event-info-bar">
                                    <div class="event-date">
                                        <span class="date-label"><%= event.month %></span>
                                        <span class="date-number"><%= event.day %></span>
                                    </div>
                                    <div class="event-time"><%= event.time %></div>
                                </div>
                                <div class="event-footer">
                                    <div class="event-price">$<%= event.price.toFixed(2) %></div>
                                    <button class="btn-book-card" onclick="openBooking('<%= event.title %>', <%= event.price %>)">Book Now</button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No events available at the moment.</p>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Booking Space Section -->
    <section id="booking-space" class="booking-space-section">
        <div class="container">
            <div class="section-header">
                <div class="section-tag">PRIVATE VENUES</div>
                <h2 class="section-title">Book Your <span class="gradient-text">Space</span></h2>
                <p class="section-description">Premium theaters for your exclusive events</p>
            </div>

            <div class="space-grid">
                <% if (spaces && spaces.length > 0) { %>
                    <% spaces.forEach(space => { %>
                        <div class="space-card">
                            <div class="space-header">
                                <div class="space-icon-large"><%= space.icon %></div>
                                <div class="space-badge <%= space.badgeClass || '' %>"><%= space.badge %></div>
                            </div>
                            <h3 class="space-title"><%= space.name %></h3>
                            <p class="space-description"><%= space.description %></p>
                            <div class="space-features">
                                <% space.features.forEach(feature => { %>
                                    <div class="feature-item">
                                        <span class="feature-icon"><%= feature.icon %></span>
                                        <span class="feature-text"><%= feature.text %></span>
                                    </div>
                                <% }); %>
                            </div>
                            <div class="space-pricing">
                                <div class="price-item">
                                    <span class="price-label">Half Day</span>
                                    <span class="price-value">$<%= space.halfDayPrice %></span>
                                </div>
                                <div class="price-item">
                                    <span class="price-label">Full Day</span>
                                    <span class="price-value">$<%= space.fullDayPrice %></span>
                                </div>
                            </div>
                            <button class="btn-space" onclick="openSpaceBooking('<%= space.name %>', <%= space.fullDayPrice %>, <%= space.halfDayPrice %>)">Reserve Now</button>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="gallery-section">
        <div class="container">
            <div class="section-header">
                <div class="section-tag">MEMORIES</div>
                <h2 class="section-title">Past <span class="gradient-text">Events</span></h2>
                <p class="section-description">Capturing unforgettable moments</p>
            </div>

            <div class="gallery-filters">
                <button class="filter-btn active" onclick="filterGallery('all')">All Events</button>
                <button class="filter-btn" onclick="filterGallery('premieres')">Premieres</button>
                <button class="filter-btn" onclick="filterGallery('festivals')">Festivals</button>
                <button class="filter-btn" onclick="filterGallery('private')">Private</button>
            </div>

            <div class="gallery-grid">
                <% if (galleryItems && galleryItems.length > 0) { %>
                    <% galleryItems.forEach(item => { %>
                        <div class="gallery-item" data-category="<%= item.category %>">
                            <div class="gallery-image">
                                <% if (item.image) { %>
                                    <img src="<%= item.image %>" alt="<%= item.title %>">
                                <% } else { %>
                                    <div class="gallery-icon"><%= item.icon || 'ðŸŽ¬' %></div>
                                <% } %>
                                <div class="gallery-overlay">
                                    <h3><%= item.title %></h3>
                                    <p><%= item.date %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Ready for the <span class="gradient-text">Ultimate</span> Cinema Experience?</h2>
                <p class="cta-description">Join thousands of movie enthusiasts</p>
                <button class="btn-cta" onclick="document.getElementById('events').scrollIntoView({behavior: 'smooth'})">Book Your Tickets</button>
            </div>
        </div>
    </section>

    <!-- Modals -->
    <%- include('partials/modals') %>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script src="/js/script.js"></script>
</body>
</html>